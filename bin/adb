#!/bin/bash

# ADB wrapper script that detects the correct ADB executable path

if [ -x /mnt/c/tools/maui/bin/platform-tools/adb.exe ]; then
    exec cmd.exe /c C:\\tools\\maui\\bin\\platform-tools\\adb.exe "$@"
elif [ -x /home/joepaley/joepaley/AppData/Local/Android/sdk/platform-tools/adb.exe ]; then
    exec /home/joepaley/joepaley/AppData/Local/Android/sdk/platform-tools/adb.exe "$@"
else
    echo "Error: ADB executable not found in known locations" >&2
    exit 1
fi